# Makefile for awSerialize for Linux - hand generated by Tom Gilbert 1999


BMODE=RELEASE
THREAD = SINGLE


CPP       = g++
LIBRARIAN = ar
LINKER    = g++

ENVOPTS =
ifeq ($(BMODE), DEBUG)
	DBGNAME =  g
	LNKOPT  = -g
	DBGOPT  = -g
	OPTIMIZE=
	OUTPATH = awGend
else
	LNKOPT  = -s
	OPTIMIZE= -O3
	OUTPATH = awGen
endif


#           AW header file include path:
AWINCL=		



###################################################################
#
# Set any relevant defines (DEFOPTS= -Dxxx ...)

CPPFLAGS=$(DBGOPT) $(OPTIMIZE)
LINKFLAGS=$(LNKOPT)

OBJECTS= AWSerialize.obj AWVerify.obj Md5.obj

clean :
	-rm *.obj
	-rm $(OUTPATH)



all : $(OBJECTS)
	@echo "LINK..."	
	$(LINKER) $(LINKFLAGS) $(OBJECTS) -o $(OUTPATH)



$(OBJECTS): %.obj : %.cpp
	$(CPP) -c $(CPPFLAGS) $< -o $@
